{
  "setupTasks": [
    {
      "name": "Install Bun",
      "command": "npm install --global bun"
    },
    {
      "name": "Install Dependencies",
      "command": "[ -f yarn.lock ] && rm yarn.lock; bun install"
    }
  ],
  "tasks": {
    "build": {
      "name": "build",
      "command": "bun run build"
    },
    "dev": {
      "name": "dev",
      "command": "bun run dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "preview": {
      "name": "preview",
      "command": "bun run start"
    }
  }
}
